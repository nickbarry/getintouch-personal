<h1>Follow up with these folks</h1>
<div id="contact-cards-container">
    {{#each this}}
        <div class="panel panel-default">
            <div class="panel-heading"><h3 class="panel-title">
                <strong>{{name.first}} {{name.last}}</strong> <span class="pull-right"><a href="#">Edit</a></span>
                <!-- TODO: Need to create Edit link functionality-->
            </h3></div>
            <div class="panel-body">
                <p><strong>Phone:</strong> {{phone1}}</p>
                <p><strong>Email:</strong> {{email}}</p>
                <p><strong>Last Contacted:</strong> {{lastContacted}} <span class="pull-right"><a class="show-hide-details" href="#">Show details</a></span></p>
                <div class="hidden details">
                    <hr>
                    <p><strong>Notes:</strong> {{notes}}</p>
                </div>
            </div>
        </div>
    {{else}}
        <div class="panel panel-default">
            <div class="panel-heading"><h3 class="panel-title">
                No Matching Contacts
            </h3></div>
            <div class="panel-body">
                <p>There were no matching contacts. Would you like to <a href="#">create a new contact?</a></p>
                <!-- TODO: "create a new contact" link functionality -->
            </div>
        </div>
    {{/each}}
</div>