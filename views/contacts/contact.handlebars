<h3>{{nameFull}}</h3>

<div class="panel-body form-horizontal">
    <form action="/contacts" method="post">
        <div class="form-group">
            <label for="name" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="nameFull" name="nameFull" placeholder="Full name" value="{{nameFull}}">
            </div>
        </div>
        <div class="form-group">
            <label for="email" class="col-sm-2 control-label">Email</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="email" name="email" placeholder="Email" value="{{email}}">
            </div>
        </div>
        <div class="form-group">
            <label for="phone1" class="col-sm-2 control-label">Phone</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="phone1" name="phone1" placeholder="Primary phone number" value="{{phone1}}">
            </div>
        </div>
        <div class="form-group">
            <label for="near" class="col-sm-2 control-label">Near</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="near" name="near" placeholder="Location" value="{{near}}">
            </div>
        </div>
        <div class="form-group">
            <label for="notes" class="col-sm-2 control-label">Notes</label>
            <div class="col-sm-10">
                <textarea class="form-control" id="notes" name="notes" placeholder="Notes about contact" rows="3">{{notes}}</textarea>
            </div>
        </div>
        <div class="form-group">
            <label for="priority" class="col-sm-2 control-label">Priority</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="priority" name="priority" placeholder="Priority (lower is better), default 3" value="{{priority}}" min="0" max="5">
            </div>
        </div>
        <div class="form-group">
            <label for="contactFrequency" class="col-sm-2 control-label">Contact frequency</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="contactFrequency" name="contactFrequency" placeholder="Number of days, default 180" value="{{contactFrequency}}" min="0">
            </div>
        </div>
        <div class="form-group">
            <label for="lastContacted" class="col-sm-2 control-label">Last contacted</label>
            <div class="col-sm-10">
                <input type="date" class="form-control" id="lastContacted" name="lastContacted" value="2015-10-04"> <!-- TODO: Pass in appropriate data for value of this field -->
            </div>
        </div>
        <div class="form-group">
            <label for="tagString" class="col-sm-2 control-label">Tags</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="tagString" name="tagString" placeholder="Tags, separated by commas" value="{{tagString}}">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Create contact</button>
            </div>
        </div>
    </form>
</div>

<p>{{phone1}} / <a href="mailto:{{email}}">{{email}}</a></p>
<p>Last Contacted: {{lastContacted}}</p>
<div class="details">
    <hr>
    <p><strong>Notes:</strong> {{notes}}</p>
</div>


